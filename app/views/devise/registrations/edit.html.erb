<% provide(:title, "Editar perfil")%>
<h1>Editar perfil</h1>
<div class="row">
 <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>A la espera de confirmación para: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :contraseña %> <i>(dejalo en blanco si no quieres realizar ningun cambio)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> caracteres como minimo</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :repetir_contraseña %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :contraseña_actual %> <i>(necesitamos tu contraseña actual para confirmar los cambios)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Actualizar", class: "btn btn-primary" %>
      </div>
    <% end %>

    <h3>Borrar mi cuenta</h3>

    <p><%= button_to "Borrar perfil", registration_path(resource_name), data: { confirm: "Estas seguro?" }, method: :delete, :class => "btn btn-danger"%></p>

    <%= button_to "Atras", :back , :class => "btn btn-outline-secondary"%>
 </div>
</div>